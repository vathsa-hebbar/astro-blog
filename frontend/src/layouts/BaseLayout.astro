---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---
<!--Where stories breathe, dreams ignite, and knowledge comes alive in every word-->
<html lang="en">
  <head>
    <meta charset="utf-8" />

    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Font preloads -->
    <link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Primary Meta Tags -->
    <title>TaleViewer</title>
    <meta name="title" content="TaleViewer" />
    <meta name="description" content="TaleViewer is not merely a website; it's an expansive portal to both boundless imagination and a dynamic wellspring of real-time information and learning insights. We stand as your haven for storytellers, where each tale discovers its voice, every narrative transforms into an enthralling adventure, and knowledge thrives as a living, breathing entity., Blog, Web Development, Angular, HTML, CSS, JavaScript, TypeScript, astrojs" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content="TaleViewer" />
    <meta property="og:description" content="TaleViewer is not merely a website; it's an expansive portal to both boundless imagination and a dynamic wellspring of real-time information and learning insights. We stand as your haven for storytellers, where each tale discovers its voice, every narrative transforms into an enthralling adventure, and knowledge thrives as a living, breathing entity., Blog, Web Development, Angular, HTML, CSS, JavaScript, TypeScript, astrojs" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content="TaleViewer" />
    <meta property="twitter:description" content="TaleViewer is not merely a website; it's an expansive portal to both boundless imagination and a dynamic wellspring of real-time information and learning insights. We stand as your haven for storytellers, where each tale discovers its voice, every narrative transforms into an enthralling adventure, and knowledge thrives as a living, breathing entity., Blog, Web Development, Angular, HTML, CSS, JavaScript, TypeScript, astrojs" />

    <meta
      name="keywords"
      content="TaleViewer is not merely a website; it's an expansive portal to both boundless imagination and a dynamic wellspring of real-time information and learning insights. We stand as your haven for storytellers, where each tale discovers its voice, every narrative transforms into an enthralling adventure, and knowledge thrives as a living, breathing entity., Blog, Web Development, Angular, HTML, CSS, JavaScript, TypeScript, astrojs"
    />
    <meta
      name="keywords"
      content="TaleViewer is not merely a website; it's an expansive portal to both boundless imagination and a dynamic wellspring of real-time information and learning insights. We stand as your haven for storytellers, where each tale discovers its voice, every narrative transforms into an enthralling adventure, and knowledge thrives as a living, breathing entity., Blog, Web Development, Angular, HTML, CSS, JavaScript, TypeScript, astrojs"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3714960712557505"
     crossorigin="anonymous"></script>  
  </head>

  <body>
    <Header />
      <main id="main-class">

        <slot/>
      </main>
    <Footer />
  </body>
</html>