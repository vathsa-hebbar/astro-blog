---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";
import "../themes/prism-atom-dark.css";
import type { CollectionEntry } from 'astro:content';
type Props = CollectionEntry<'blog'>['data'];
const { content } = Astro.props;
const parsedPublishedDate = new Date(content.publishedDate);

const formattedDate = parsedPublishedDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<html lang="en">
  <head>
    <title>{content.title}</title>
    <base href="/" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="TaleViewer is not merely a website; it's an expansive portal to both boundless imagination and a dynamic wellspring of real-time information and learning insights. We stand as your haven for storytellers, where each tale discovers its voice, every narrative transforms into an enthralling adventure, and knowledge thrives as a living, breathing entity."
    />
    <meta
      name="keywords"
      content="TaleViewer is not merely a website; it's an expansive portal to both boundless imagination and a dynamic wellspring of real-time information and learning insights. We stand as your haven for storytellers, where each tale discovers its voice, every narrative transforms into an enthralling adventure, and knowledge thrives as a living, breathing entity., Blog, Web Development, Angular, HTML, CSS, JavaScript, TypeScript"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <script defer src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3714960712557505"
     crossorigin="anonymous"></script>
  </head>

  <body>
    <main>
      <Header />

      <div class="flex flex-grow justify-center min-h-screen">
        <article class="w-screen max-w-4xl p-8">
          <h2 class="text-gray-600 text-2xl">{content.title}</h2>

          <span class="font-light text-sm">
            {formattedDate}
          </span>

          <slot/>
        </article>  
      </div>
      
      <Footer />
    </main>
  </body>
</html>